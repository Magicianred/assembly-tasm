CLEAR  MACRO ;to clear the screen
MOV	AX, 0600H; Scroll screen
MOV	BH, 07H ; Normal attribute
MOV	CX, 0000H ; From 00;00
MOV	DX, 184FH ; to 18h;4Fh
INT	10H
ENDM


CURSORMIDDLE MACRO 
MOV AH,2
MOV BH,00
MOV DH,12 ;ROW coordinate(for center)
MOV DL,40 ;COLUMN coordinate(for center)
INT 10h
ENDM

CURSORMIDDLE1 MACRO ;to have the semesterNo next line
MOV AH,2
MOV BH,00
MOV DH,13 ;ROW
MOV DL,40 ;COLUMN
INT 10h
ENDM


PRINTSTRING MACRO INPUT1
MOV AH, 9
LEA DX, INPUT1
INT 21H
ENDM

READSTRING MACRO INPUT1
MOV AH, 0AH
LEA DX, INPUT1
INT 21H
ENDM

PRINTCHAR MACRO INPUT2
MOV AH, 02h
MOV DL,BL
INT 21H
ENDM

READCHAR MACRO 
MOV AH, 01h
INT 21H
MOV BL,AL
ENDM